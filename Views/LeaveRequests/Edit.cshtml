

                    @model SkyGlobal.Models.LeaveRequest

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center">Edit</h1>

<h4 class="text-center">LeaveRequest</h4>
<hr />

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <input type="hidden" asp-for="LeaveRequestId" />

                <!-- UserId -->
                <div class="form-group">
                    <label asp-for="UserId" class="control-label"></label>
                    <input asp-for="UserId" class="form-control" />
                    <span asp-validation-for="UserId" class="text-danger"></span>
                </div>

                <!-- StartDate -->
                <div class="form-group">
                    <label asp-for="StartDate" class="control-label"></label>
                    <input asp-for="StartDate" class="form-control" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>

                <!-- EndDate -->
                <div class="form-group">
                    <label asp-for="EndDate" class="control-label"></label>
                    <input asp-for="EndDate" class="form-control" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>

                <!-- LeaveTypeId -->
                <div class="form-group">
                    <label asp-for="LeaveTypeId" class="control-label"></label>
                    <select asp-for="LeaveTypeId" class="form-control" asp-items="ViewBag.LeaveTypeId"></select>
                    <span asp-validation-for="LeaveTypeId" class="text-danger"></span>
                </div>

                <!-- LeaveStatusId -->
                <div class="form-group">
                    <label asp-for="LeaveStatusId" class="control-label"></label>
                    <select asp-for="LeaveStatusId" class="form-control" asp-items="ViewBag.LeaveStatusId"></select>
                    <span asp-validation-for="LeaveStatusId" class="text-danger"></span>
                </div>

                <!-- Conditionally visible fields for Admin -->
                @if (ViewBag.UserRole == "Admin")
                {
                    <div class="form-group">
                        <label asp-for="RequestDate" class="control-label"></label>
                        <input asp-for="RequestDate" class="form-control" />
                        <span asp-validation-for="RequestDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Comments" class="control-label"></label>
                        <input asp-for="Comments" class="form-control" />
                        <span asp-validation-for="Comments" class="text-danger"></span>
                    </div>
                }

                <!-- Conditionally visible fields for Regular Users -->
                @if (ViewBag.UserRole != "Admin")
                {
                    <!-- No changes for regular users -->
                }

                <!-- Submit button -->
                <div class="form-group text-center">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
