@model SkyGlobal.Models.LeaveRequest

@{
    ViewData["Title"] = "Create Leave Request";
}

<!-- breadcrumb -->
<section class="w3l-about-breadcrumb">
    <div class="breadcrumb-bg breadcrumb-bg-about py-5">
        <div class="container py-lg-5 py-md-4">
            <div class="w3breadcrumb-gids text-center pt-5">
                <div class="w3breadcrumb-right">
                    <ul class="breadcrumbs-custom-path">
                        <li><a href="index.html">Home</a></li>
                        <li class="active"><span class="fas fa-angle-double-right mx-2"></span> Create Leave Request</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Main Form Section -->
<div class="container my-5">
    <h1 class="text-center mb-4">Create Leave Request</h1>
    <h4 class="text-center mb-4 text-muted">Please fill in the details below</h4>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                <!-- User ID -->
                <div class="form-group">
                    <label asp-for="UserId" class="control-label font-weight-bold"></label>
                    <input asp-for="UserId" class="form-control" placeholder="Enter User ID" />
                    <span asp-validation-for="UserId" class="text-danger"></span>
                </div>

                <!-- Start Date -->
                <div class="form-group">
                    <label asp-for="StartDate" class="control-label font-weight-bold"></label>
                    <input asp-for="StartDate" class="form-control" type="date" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>

                <!-- End Date -->
                <div class="form-group">
                    <label asp-for="EndDate" class="control-label font-weight-bold"></label>
                    <input asp-for="EndDate" class="form-control" type="date" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>

                <!-- Leave Status -->
                <div class="form-group">
                    <label asp-for="LeaveStatusId" class="control-label font-weight-bold"></label>
                    <select asp-for="LeaveStatusId" class="form-control" asp-items="ViewBag.LeaveStatusId">
                        <option value="">Select Status</option>
                    </select>
                    <span asp-validation-for="LeaveStatusId" class="text-danger"></span>
                </div>

                <!-- Leave Type -->
                <div class="form-group">
                    <label asp-for="LeaveTypeId" class="control-label font-weight-bold"></label>
                    <select asp-for="LeaveTypeId" class="form-control" asp-items="ViewBag.LeaveTypeId">
                        <option value="">Select Type</option>
                    </select>
                    <span asp-validation-for="LeaveTypeId" class="text-danger"></span>
                </div>

                <!-- Approver ID -->
                <div class="form-group">
                    <label asp-for="ApproverId" class="control-label font-weight-bold"></label>
                    <input asp-for="ApproverId" class="form-control" placeholder="Enter Approver ID" />
                    <span asp-validation-for="ApproverId" class="text-danger"></span>
                </div>

                <!-- Approver Role -->
                <div class="form-group">
                    <label asp-for="ApproverRole" class="control-label font-weight-bold"></label>
                    <input asp-for="ApproverRole" class="form-control" placeholder="Enter Approver Role" />
                    <span asp-validation-for="ApproverRole" class="text-danger"></span>
                </div>

                <!-- Request Date -->
                <div class="form-group">
                    <label asp-for="RequestDate" class="control-label font-weight-bold"></label>
                    <input asp-for="RequestDate" class="form-control" type="date" />
                    <span asp-validation-for="RequestDate" class="text-danger"></span>
                </div>

                <!-- Approval Date -->
                <div class="form-group">
                    <label asp-for="ApprovalDate" class="control-label font-weight-bold"></label>
                    <input asp-for="ApprovalDate" class="form-control" type="date" />
                    <span asp-validation-for="ApprovalDate" class="text-danger"></span>
                </div>

                <!-- Comments -->
                <div class="form-group">
                    <label asp-for="Comments" class="control-label font-weight-bold"></label>
                    <textarea asp-for="Comments" class="form-control" rows="4" placeholder="Add any comments or notes here"></textarea>
                    <span asp-validation-for="Comments" class="text-danger"></span>
                </div>

                <!-- Submit Button -->
                <div class="form-group text-center">
                    <input type="submit" value="Create Leave Request" class="btn btn-primary btn-lg" />
                </div>
            </form>
        </div>
    </div>

    <!-- Back to List Link -->
    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-secondary">Back to Leave Requests</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
