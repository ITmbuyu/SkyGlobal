@model SkyGlobal.Models.WorkUpdate

@{
    ViewData["Title"] = "Details";
}

<!-- breadcrumb -->
<section class="w3l-about-breadcrumb">
    <div class="breadcrumb-bg breadcrumb-bg-about py-5">
        <div class="container py-lg-5 py-md-4">
            <div class="w3breadcrumb-gids text-center pt-5">
                <div class="w3breadcrumb-right">
                    <ul class="breadcrumbs-custom-path">
                        <li><a href="index.html" class="breadcrumb-link">Home</a></li>
                        <li class="active"><span class="fas fa-angle-double-right mx-2"></span> Work News</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<!--//breadcrumb-->

<div class="w3l-homeblock2 py-5">
    <div class="container py-lg-5 py-md-4">
        <!-- block -->
        <div class="row">
            <div class="col-lg-8">
                <h3 class="section-title-left mb-4"> <span class="genre">@Model.WorkUpdateTopic.Topic</span> </h3>

                <style>
                    /* Styles for news article layout */

                    .news-container {
                        display: flex;
                        flex-direction: column;
                        align-items: center;
                    }

                    .news-item {
                        margin-bottom: 20px;
                        border: 1px solid #ccc;
                        border-radius: 5px;
                        padding: 20px;
                        width: 80%;
                        max-width: 800px;
                        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
                    }

                    .news-info {
                        display: flex;
                        justify-content: space-between;
                        align-items: center;
                    }

                    .genre {
                        color: #007bff; /* Adjust color as needed */
                    }

                    .title {
                        margin-bottom: 10px;
                    }

                    .article-image img {
                        max-width: 100%;
                        height: auto;
                        border-radius: 5px;
                        margin-bottom: 10px;
                    }

                    .article-content {
                        line-height: 1.6;
                    }
                </style>

                <div class="news-container">
                    <h1>@Model.Title </h1>

                    <div class="article-info">

                        <span class="date">@Model.DatePublished.ToString()</span>
                        <span class="date">by @Model.Author</span>
                        <!-- You can add more information like publication date, author, etc. here -->
                    </div>


                    <div class="article-image">
                        <img src="@Model.ArticlePicture" alt="Article Image">
                    </div>


                    <p class="article-content">@Html.Raw(Model.Update)</p>

                    <div>
                        <a asp-action="Edit" asp-route-id="Model?.NewsinfoId">Edit</a> |
                        <a asp-action="Index">Back to List</a>
                    </div>
                </div>


                <div class="mt-4 left-right bg-clr-white p-3">
                    <h3 class="section-title-left align-self pl-2 mb-sm-0 mb-3">Advertise with us </h3>
                    <a class="btn btn-style btn-primary" href="#url">Learn more</a>
                </div>
            </div>
