@model SkyGlobal.Models.WorkUpdate

@{
    ViewData["Title"] = "Edit";
}

<!-- breadcrumb -->
<section class="w3l-about-breadcrumb">
    <div class="breadcrumb-bg breadcrumb-bg-about py-5">
        <div class="container py-lg-5 py-md-4">
            <div class="w3breadcrumb-gids text-center pt-5">
                <div class="w3breadcrumb-right">
                    <ul class="breadcrumbs-custom-path">
                        <li><a href="index.html" class="breadcrumb-link">Home</a></li>
                        <li class="active"><span class="fas fa-angle-double-right mx-2"></span> Work News Edit</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<!--//breadcrumb-->

<h4>WorkUpdate</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="WorkUpdateId" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ArticlePicture" class="control-label"></label>
                <input type="file" asp-for="ArticlePicture" class="form-control" />
                <span asp-validation-for="ArticlePicture" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Update" class="control-label"></label>
                <textarea id="summernote1" asp-for="Update" class="form-control"></textarea>
                <span asp-validation-for="Update" class="text-danger"></span>
                <script>
                    $('#summernote1').summernote({
                    placeholder: 'Hello Bootstrap 4',
                    tabsize: 2,
                    height: 50
                    });
                </script>
            </div>
            <div class="form-group">
                <label asp-for="Author" class="control-label"></label>
                <input asp-for="Author" class="form-control" />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WorkUpdateTopicId" class="control-label"></label>
                <select asp-for="WorkUpdateTopicId" class="form-control" asp-items="ViewBag.WorkUpdateTopicId"></select>
                <span asp-validation-for="WorkUpdateTopicId" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
