@model IEnumerable<SkyGlobal.Models.JobApplication>

@{
    ViewData["Title"] = "Job Applications";
}
<!-- breadcrumb -->
<section class="w3l-about-breadcrumb">
    <div class="breadcrumb-bg breadcrumb-bg-about py-5">
        <div class="container py-lg-5 py-md-4">
            <div class="w3breadcrumb-gids text-center pt-5">
                <div class="w3breadcrumb-right">
                    <ul class="breadcrumbs-custom-path">
                        <li><a href="index.html" class="breadcrumb-link">Home</a></li>
                        <li class="active"><span class="fas fa-angle-double-right mx-2"></span> Job Applications</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<!--//breadcrumb-->

<div style="padding-top: 100px;">
<h2>Job Applications</h2>

<table class="table">
    <thead>
        <tr>
            <th>Applicant Name</th>
            <th>Email</th>
            <th>Job Title</th>
            <th>Status</th>
            <th>Applied Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var application in Model)
        {
            <tr>
                <td>@application.ApplicantName</td>
                <td>@application.ApplicantEmail</td>
                <td>@application.Job.Title</td>
                <td>@application.Status</td>
                <td>@application.AppliedDate.ToShortDateString()</td>
                <td>
                    <a asp-action="Details" asp-route-id="@application.ApplicationId" class="btn btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@application.ApplicationId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
