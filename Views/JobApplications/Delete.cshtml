@model SkyGlobal.Models.JobApplication

@{
    ViewData["Title"] = "Delete Application";
}

<!-- breadcrumb -->
<section class="w3l-about-breadcrumb">
    <div class="breadcrumb-bg breadcrumb-bg-about py-5">
        <div class="container py-lg-5 py-md-4">
            <div class="w3breadcrumb-gids text-center pt-5">
                <div class="w3breadcrumb-right">
                    <ul class="breadcrumbs-custom-path">
                        <li><a href="index.html" class="breadcrumb-link">Home</a></li>
                        <li class="active"><span class="fas fa-angle-double-right mx-2"></span> Delete Job</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<!--//breadcrumb-->

<h2>Delete Job Application</h2>

<h4>Are you sure you want to delete this application?</h4>
<p><strong>Applicant Name:</strong> @Model.ApplicantName</p>
<p><strong>Email:</strong> @Model.ApplicantEmail</p>
<p><strong>Job Title:</strong> @Model.Job.Title</p>
<p><strong>Applied Date:</strong> @Model.AppliedDate.ToShortDateString()</p>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="ApplicationId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
