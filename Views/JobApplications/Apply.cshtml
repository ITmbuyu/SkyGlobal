@model SkyGlobal.Models.JobApplication



@{
    ViewData["Title"] = "Apply for Job";
}

<!-- breadcrumb -->
<section class="w3l-about-breadcrumb">
    <div class="breadcrumb-bg breadcrumb-bg-about py-5">
        <div class="container py-lg-5 py-md-4">
            <div class="w3breadcrumb-gids text-center pt-5">
                <div class="w3breadcrumb-right">
                    <ul class="breadcrumbs-custom-path">
                        <li><a href="index.html" class="breadcrumb-link">Home</a></li>
                        <li class="active"><span class="fas fa-angle-double-right mx-2"></span> Apply for Job</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<!--//breadcrumb-->

<div style="padding-top: 100px;">
<h2>Apply for @ViewBag.JobTitle</h2>
@if (ViewBag.JobTitle == null)
{
    <div class="alert alert-danger">
        <strong>Error:</strong> Job title is missing.
    </div>
}


<form asp-action="Apply" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="JobPostingId" />

    <div class="form-group">
        <label asp-for="ApplicantName"></label>
        <input asp-for="ApplicantName" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="ApplicantEmail"></label>
        <input asp-for="ApplicantEmail" class="form-control" type="email" required />
    </div>

    <div class="form-group">
        <label for="resumeFile">Upload Resume</label>
        <input type="file" id="resumeFile" name="resumeFile" class="form-control" accept=".pdf,.doc,.docx" required />
    </div>

    <button type="submit" class="btn btn-primary">Submit Application</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
</div>
