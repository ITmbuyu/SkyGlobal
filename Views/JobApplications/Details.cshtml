@model SkyGlobal.Models.JobApplication

@{
    ViewData["Title"] = "Application Details";
}

<!-- breadcrumb -->
<section class="w3l-about-breadcrumb">
    <div class="breadcrumb-bg breadcrumb-bg-about py-5">
        <div class="container py-lg-5 py-md-4">
            <div class="w3breadcrumb-gids text-center pt-5">
                <div class="w3breadcrumb-right">
                    <ul class="breadcrumbs-custom-path">
                        <li><a href="index.html" class="breadcrumb-link">Home</a></li>
                        <li class="active"><span class="fas fa-angle-double-right mx-2"></span> Application Details</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<!--//breadcrumb-->

<h2>Application Details</h2>

<div>
    <h4>Applicant Name: @Model.ApplicantName</h4>
    <h5>Email: @Model.ApplicantEmail</h5>
    <h5>Job Title: @Model.Job.Title</h5>
    <h5>Status: @Model.Status</h5>
    <h5>Applied Date: @Model.AppliedDate.ToShortDateString()</h5>

    @if (!string.IsNullOrEmpty(Model.ResumePath))
    {
        <h5>Resume: <a href="@Model.ResumePath" target="_blank">Download</a></h5>
    }
</div>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>
