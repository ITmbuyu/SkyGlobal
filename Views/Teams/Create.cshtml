@model SkyGlobal.Models.Team

@{
    ViewData["Title"] = "Create Team";
}

<!-- breadcrumb -->
<section class="w3l-about-breadcrumb">
    <div class="breadcrumb-bg breadcrumb-bg-about py-5">
        <div class="container py-lg-5 py-md-4">
            <div class="w3breadcrumb-gids text-center pt-5">
                <div class="w3breadcrumb-right">
                    <ul class="breadcrumbs-custom-path">
                        <li><a href="index.html" class="breadcrumb-link">Home</a></li>
                        <li class="active"><span class="fas fa-angle-double-right mx-2"></span> Create Team</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<!--//breadcrumb-->

<div class="container mt-5">
    <h1 class="text-center mb-4">Create New Team</h1>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                <div class="form-group">
                    <label asp-for="TeamLeaderId" class="control-label">Team Leader ID</label>
                    <input asp-for="TeamLeaderId" class="form-control" placeholder="Enter Team Leader ID" />
                    <span asp-validation-for="TeamLeaderId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="TeamName" class="control-label">Team Name</label>
                    <input asp-for="TeamName" class="form-control" placeholder="Enter Team Name" />
                    <span asp-validation-for="TeamName" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Create" class="btn btn-primary btn-lg" />
                </div>
            </form>
        </div>
    </div>

    <div class="mt-4 text-center">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

