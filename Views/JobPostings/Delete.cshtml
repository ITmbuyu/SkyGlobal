@model SkyGlobal.Models.JobPosting

<!-- breadcrumb -->
<section class="w3l-about-breadcrumb">
    <div class="breadcrumb-bg breadcrumb-bg-about py-5">
        <div class="container py-lg-5 py-md-4">
            <div class="w3breadcrumb-gids text-center pt-5">
                <div class="w3breadcrumb-right">
                    <ul class="breadcrumbs-custom-path">
                        <li><a href="index.html" class="breadcrumb-link">Home</a></li>
                        <li class="active"><span class="fas fa-angle-double-right mx-2"></span> Delete Application</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<!--//breadcrumb-->
<div style="padding-top: 100px;">
<h2>Are you sure you want to delete this job posting?</h2>

<div>
    <strong>Title:</strong> @Model.Title
</div>
<div>
    <strong>Description:</strong> @Model.Description
</div>

<form asp-action="Delete" method="post" class="d-inline">
    <input type="hidden" name="id" value="@Model.JobPostingId" />
    <button type="submit" class="btn btn-danger btn-lg"
           >
        <i class="fas fa-trash"></i> Delete
    </button>
</form>
</div>