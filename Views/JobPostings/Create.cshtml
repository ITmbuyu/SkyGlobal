@model SkyGlobal.Models.JobPosting


<!-- breadcrumb -->
<section class="w3l-about-breadcrumb">
    <div class="breadcrumb-bg breadcrumb-bg-about py-5">
        <div class="container py-lg-5 py-md-4">
            <div class="w3breadcrumb-gids text-center pt-5">
                <div class="w3breadcrumb-right">
                    <ul class="breadcrumbs-custom-path">
                        <li><a href="index.html" class="breadcrumb-link">Home</a></li>
                        <li class="active"><span class="fas fa-angle-double-right mx-2"></span> Create Application</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<!--//breadcrumb-->

<div style="padding-top: 100px;">
<h2 class="text-center mb-4">Create a Job Application</h2>

<!-- View Current Jobs Button -->
<div class="text-center mb-3">
    <a asp-action="Index" class="btn btn-secondary btn-lg">
        <i class="fas fa-arrow-left"></i> View Current Posted Jobs
    </a>
</div>

<form asp-action="Create" method="post" class="needs-validation" novalidate style="padding-left: 15px; padding-right: 15px;">
    <!-- Job Title -->
    <div class="form-group">
        <label asp-for="Title" class="form-label">Job Title</label>
        <input asp-for="Title" class="form-control" required />
        <div class="invalid-feedback">Please provide a title.</div>
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <!-- Job Description -->
    <div class="form-group">
        <label asp-for="Description" class="form-label">Description of Job</label>
        <textarea asp-for="Description" class="form-control" required></textarea>
        <div class="invalid-feedback">Please provide a description.</div>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <!-- Job Requirements -->
    <div class="form-group">
        <label asp-for="Requirements" class="form-label">Requirements for Job Role</label>
        <textarea asp-for="Requirements" class="form-control"></textarea>
        <div class="invalid-feedback">Please provide the requirements.</div>
        <span asp-validation-for="Requirements" class="text-danger"></span>
    </div>

    <!-- Job Location -->
    <div class="form-group">
        <label asp-for="Location" class="form-label">Job Location</label>
        <input asp-for="Location" class="form-control" required />
        <div class="invalid-feedback">Please provide a location.</div>
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>

    <!-- Internal Job Posting Checkbox -->
    <div class="form-group form-check">
        <input asp-for="IsInternal" class="form-check-input" type="checkbox" id="IsInternal" />
        <label class="form-check-label" for="IsInternal">Is this an internal job posting?</label>
        <span asp-validation-for="IsInternal" class="text-danger"></span>
    </div>

    <!-- Expiry Date -->
    <div class="form-group">
        <label asp-for="ExpiryDate" class="form-label">Expiry Date of Job Application</label>
        <input asp-for="ExpiryDate" type="date" class="form-control" required />
        <div class="invalid-feedback">Please select an expiry date.</div>
        <span asp-validation-for="ExpiryDate" class="text-danger"></span>
    </div>

    <!-- Submit Button -->
    <div class="form-group text-center">
        <button type="submit" class="btn btn-primary btn-lg">
            <i class="fas fa-plus-circle"></i> Create Job
        </button>
    </div>
</form>
</div>
