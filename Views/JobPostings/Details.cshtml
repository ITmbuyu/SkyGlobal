@model SkyGlobal.Models.JobPosting

<!-- breadcrumb -->
<section class="w3l-about-breadcrumb">
    <div class="breadcrumb-bg breadcrumb-bg-about py-5">
        <div class="container py-lg-5 py-md-4">
            <div class="w3breadcrumb-gids text-center pt-5">
                <div class="w3breadcrumb-right">
                    <ul class="breadcrumbs-custom-path">
                        <li><a href="index.html" class="breadcrumb-link">Home</a></li>
                        <li class="active"><span class="fas fa-angle-double-right mx-2"></span> Application Postings</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<!--//breadcrumb-->
<div style="padding-top: 100px;">
<h2 class="text-center mb-4">Job Posting Details</h2>

<div class="card shadow-lg p-4">
    <table class="table table-bordered">
        <tbody>
            <tr>
                <th class="w-25">Job Title:</th>
                <td>@Model.Title</td>
            </tr>
            <tr>
                <th>Description:</th>
                <td>@Model.Description</td>
            </tr>
            <tr>
                <th>Location:</th>
                <td>@Model.Location</td>
            </tr>
            <tr>
                <th>Expiry Date:</th>
                <td>@(Model.ExpiryDate?.ToShortDateString() ?? "N/A")</td>
            </tr>
            <tr>
                <th>Posted Date:</th>
                <td>@(Model.ExpiryDate?.ToShortDateString() ?? "N/A")</td>
            </tr>
        </tbody>
    </table>

    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-secondary btn-lg">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
        <a asp-action="Edit" asp-route-id="@Model.JobPostingId" class="btn btn-warning btn-lg">
            <i class="fas fa-edit"></i> Edit
        </a>
        <a asp-action="Delete" asp-route-id="@Model.JobPostingId" class="btn btn-danger btn-lg"
          >
            <i class="fas fa-trash"></i> Delete
        </a>
    </div>
</div>
</div>
