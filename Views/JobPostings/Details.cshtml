@model SkyGlobal.Models.JobPosting
<div style="padding-top: 100px;">
<h2 class="text-center mb-4">Job Posting Details</h2>

<div class="card shadow-lg p-4">
    <table class="table table-bordered">
        <tbody>
            <tr>
                <th class="w-25">Job Title:</th>
                <td>@Model.Title</td>
            </tr>
            <tr>
                <th>Description:</th>
                <td>@Model.Description</td>
            </tr>
            <tr>
                <th>Location:</th>
                <td>@Model.Location</td>
            </tr>
            <tr>
                <th>Expiry Date:</th>
                <td>@(Model.ExpiryDate?.ToShortDateString() ?? "N/A")</td>
            </tr>
            <tr>
                <th>Posted Date:</th>
                <td>@(Model.ExpiryDate?.ToShortDateString() ?? "N/A")</td>
            </tr>
        </tbody>
    </table>

    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-secondary btn-lg">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
        <a asp-action="Edit" asp-route-id="@Model.JobPostingId" class="btn btn-warning btn-lg">
            <i class="fas fa-edit"></i> Edit
        </a>
        <a asp-action="Delete" asp-route-id="@Model.JobPostingId" class="btn btn-danger btn-lg"
          >
            <i class="fas fa-trash"></i> Delete
        </a>
    </div>
</div>
</div>
